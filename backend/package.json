{
  "name": "smart-rental-backend",
  "version": "1.0.0",
  "description": "Backend API for Smart Rental System",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:seed": "node scripts/seed.js",
    "logs": "tail -f logs/all.log",
    "logs:error": "tail -f logs/error.log",
    "translate:start": "docker-compose -f ../docker-compose.translate.yml up -d",
    "translate:stop": "docker-compose -f ../docker-compose.translate.yml down",
    "translate:logs": "docker-compose -f ../docker-compose.translate.yml logs -f",
    "translate:test": "node test-libretranslate.js"
  },
  "keywords": [
    "rental",
    "api",
    "express",
    "nodejs",
    "prisma",
    "postgresql"
  ],
  "author": "Smart Rental Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "handlebars": "^4.7.8",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",

    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "puppeteer": "^24.15.0",
    "redis": "^5.6.1",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "stripe": "^14.7.0",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.0",
    "@types/passport": "^1.0.16",
    "@types/passport-facebook": "^2.1.4",
    "@types/passport-google-oauth20": "^2.0.14",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.5",
    "prisma": "^6.12.0",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/app.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "node": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}
